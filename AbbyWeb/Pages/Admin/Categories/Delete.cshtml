@page
@model AbbyWeb.Pages.Admin.Categories.DeleteModel
@{
}


<form method="post">
	<input hidden asp-for="Category.Id"/>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary .pl-3"> Delete Category</h2>
			<hr/>
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Category.Name"></label>
			<input asp-for="@Model.Category.Name" class="form-control" readonly/>
			<span asp-validation-for="Category.Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Category.DisplayOrder"></label>
			<input asp-for="@Model.Category.DisplayOrder" class="form-control" readonly/>
			<span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-danger align-content-center" style="width: 150px">DELETE</button>
		<a asp-page="Index" class="btn btn-secondary align-content-center" style="width: 150px">Back</a>
	</div>
</form>

@section Scripts
{
	<partial name="_ValidationScriptsPartial"/>
}
