@page
@model AbbyWeb.Pages.Admin.Foods.CreateModel

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary .pl-3"> Edit Category</h2>
			<hr/>
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Food.Name"></label>
			<input asp-for="@Model.Food.Name" class="form-control"/>
			<span asp-validation-for="Food.Name" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary align-content-center" style="width: 150px">Create</button>
		<a asp-page="Index" class="btn btn-secondary align-content-center" style="width: 150px">Back</a>
	</div>
</form>

@section Scripts
{
	<partial name="_ValidationScriptsPartial"/>
}
