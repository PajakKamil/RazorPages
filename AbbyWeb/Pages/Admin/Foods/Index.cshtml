@page
@model AbbyWeb.Pages.Admin.Foods.IndexModel
<partial name="Shared/_Notification"/>

<div class="container p-3">
<div class="row pt-4">
	<div class="col-6">
		<h2 class="text-primary">Food Type List</h2>
	</div>
	<div class="col-6 text-end">
		<a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i> &nbsp;Add New Food Type</a>
	</div>
</div>
	
<br/><br/>
	
<table class="table table-bordered table-striped" style="width: 100%">
<thead>
<tr>
	<th class="col-9">
		Food Type
	</th>
	<th class="col-2">
		Modify
	</th>
</tr>
</thead>
<tbody class="border-top-0">
@foreach (var obj in Model.Foods)
{
	<tr>
		<td>
			@obj.Name
		</td>
		<td>
			<div class="w-100 btn-group" role="group">
				<a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
					<i class="bi bi-pencil-square"></i>
				</a>
				<a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
					<i class="bi bi-trash-fill"></i>
				</a>
			</div>
		</td>
	</tr>
}
</tbody>
</table>
</div>